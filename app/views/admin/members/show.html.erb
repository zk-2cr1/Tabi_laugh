<div class="container">
  <h3><%= @member.nick_name %>さんの詳細</h3>
</div>
<br>
<div class="row justify-content-center">
  <div class="col-5">
    <table class="table">
      <tr>
        <th>ユーザーID</th>
        <td><%= @member.id %></td>
      </tr>
      <tr>
        <th>名前</th>
        <td><%= @member.name %></td>
      </tr>
      <tr>
        <th>表示名</th>
        <td><%= @member.nick_name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @member.email %></td>
      </tr>
      <tr>
        <th>ユーザーステータス</th>
        <td>
          <% if @member.is_deleted == false %>
            <div class="text-success font-weight-bold">有効</div>
          <% else %>
            <div class="text-danger font-weight-bold">退会</div>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>
 <div class="row justify-content-center">
          <%= link_to "編集する",edit_admin_member_path,class: "btn btn-success btn-sm" %>
      </div>