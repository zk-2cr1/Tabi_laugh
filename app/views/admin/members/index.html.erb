<div class='container'>
  <div class'row'>
     <h4 class="section-ttl font-weight-bold">ユーザー一覧</h4>
      <br>

      <div class='col-md-9 mx-auto'>
      <table class='table'>
        <thead>
          <tr class="table-secondary">
            <th>ユーザーID</th>
            <th>名前</th>
            <th>表示名</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @members.each do |member| %>
          <tr class="table-secondary">
            <td><%= member.id %></td>
            <td>
              <%= link_to admin_member_path(member.id) do %>
              <%= member.name %>
              <% end %>
            </td>
            <td><%= member.nick_name %></td>
            <td>
              <% if member.is_deleted %>
                <div class="text-danger font-weight-bold">退会</div>
              <% else %>
                <div class="text-success font-weight-bold">有効</div>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>

  </div>
    <div class= "text-center"><%= paginate @members %></div>
</div>