<div class="container">
  <div class="row justify-content-center">
    <h4 class="section-ttl font-weight-bold"><%= @post.title %></h4>
  </div>

  <div class="row justify-content-center">
    <!--リンク付きハッシュタグ-->
    <%= render_with_hashtags(@post.body) %>
  </div>

  <div class="row justify-content-center">
    <% if @post.image.attached? %>
    <td><%= image_tag @post.image, width: '30%', height: '30%' %></td>
    <% end %>
  </div>

  <div class="row justify-content-end">
       <td><%= link_to 'Destroy', admin_post_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger btn-sm" %></td>
  </div>



    <table class = "table">
    <tr>
       <h6 class="font-weight-bold">コメント一覧</h6>
      <% @comments.each do |comment| %>
       <td>
       <%= comment.body %>
       <%= link_to 'Destroy', admin_comment_path(comment.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger btn-sm" %>
       </td>
       </tr>
      <% end %>
      </table>


</div>