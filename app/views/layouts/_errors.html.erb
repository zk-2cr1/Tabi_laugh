<% if obj.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <div id="error_explanation">
      <h3><%= pluralize(obj.errors.count, "エラー") %> が発生しました</h3>
        <ul>
          <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  </div>
<% end %>