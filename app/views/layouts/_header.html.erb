<header class="<%= (admin_signed_in? ? "admin_header" : "" ) %>">
    <div class="header-logo">
        <%= link_to "旅ラフ", root_path, class: "btn btn-outline-dark mx-2 font-weight-bold" %>
    </div>

    <div class="header-list">
            <% if admin_signed_in? %>
                <li><%= link_to "管理者トップ", admin_top_path, class: "btn btn-outline-dark mx-2 font-weight-bold" %></li>
                <li><%= link_to "ユーザー一覧", admin_members_path, class: "btn btn-outline-dark mx-2 font-weight-bold" %></li>
                <li><%= link_to "投稿一覧", admin_posts_path, class: "btn btn-outline-dark mx-2 font-weight-bold" %></li>
                <li><%= link_to "コメント一覧", admin_comments_path, class: "btn btn-outline-dark mx-2 font-weight-bold" %></li>
                <div class="header-dropdown1">
                  <!--切替ボタンの設定 -->
                  <div class="nav-link" id="dropdownMenuButton button_group" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <div class="btn btn-outline-dark font-weight-bold">エリア</div>
                  </div>
                  <!--ドロップメニューの設定 -->
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <% @categories.each do |category| %>
                    <%= link_to category.name,admin_posts_path(category_id: category.id), class: 'nav-link dropdown-item' %>
                    <% end %>
                  </div>
                </div>
                <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark mx-2 font-weight-bold" %></li>
            <% elsif member_signed_in? %>
                <p>ようこそ、<%= current_member.nick_name %>さん！<p>
                <!--検索フォーム-->
              <div class="header-searchform">
                <%= form_with url: search_path, method: :get, local: true do |f| %>
                    <%= f.text_field :keyword, :placeholder =>"投稿検索"  %>
                    <%= f.select :method , options_for_select({"部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect" }) %>
                    <%= f.submit '検索', class: "btn btn-dark btn-sm"%>
                <% end %>
              </div>
              <div class="header-dropdown1">
                <!--切替ボタンの設定 -->
                <div class="nav-link" id="dropdownMenuButton button_group" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <div class="btn btn-outline-dark font-weight-bold">エリア</div>
                </div>
                <!--ドロップメニューの設定 -->
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                  <% @categories.each do |category| %>
                  <%= link_to category.name,posts_path(category_id: category.id), class: 'nav-link dropdown-item' %>
                  <% end %>
                </div>
              </div>
              <li><%= link_to '投稿一覧', posts_path, class: "btn btn-outline-dark mx-2 font-weight-bold" %></li>
              <li><%= link_to 'マイページ', mypage_path, class: "btn btn-outline-dark mx-2 font-weight-bold" %></li>
              <!--新規投稿-->
              <div class="new_post">
                <%= link_to new_post_path do %>
                   <i class="fa-regular fa-square-plus fa-2x"></i>
                <% end %>
              </div>
              <!--管理マーク-->
              <div class="header-dropdown2">
                  <!-- 切替ボタンの設定 -->
                  <div class="nav-link" id="dropdownMenuButton button_group" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                     <i class="fa-regular fa-user fa-2x"></i>
                  </div>
                  <!-- ドロップメニューの設定 -->
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                      <%= link_to 'マイページ', mypage_path, class: 'nav-link dropdown-item' %>
                      <%= link_to 'ログアウト', destroy_member_session_path, method: :delete, class: 'nav-link dropdown-item' %>
                      <%= link_to 'アカウント編集', edit_member_registration_path, class: 'nav-link dropdown-item' %>
                  </div>
              </div>
            <% else %>
                <!--検索フォーム-->
                <div class="header-searchform">
                <%= form_with url: search_path, method: :get, local: true do |f| %>
                    <%= f.text_field :keyword, :placeholder =>"投稿検索"  %>
                    <%= f.select :method , options_for_select({"部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect" }) %>
                    <%= f.submit '検索', class: "btn btn-dark btn-sm"%>
                <% end %>
                </div>
                <div class="header-dropdown1">
                  <!--切替ボタンの設定 -->
                  <div class="nav-link" id="dropdownMenuButton button_group" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <div class="btn btn-outline-dark font-weight-bold">エリア</div>
                  </div>
                  <!--ドロップメニューの設定 -->
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <% @categories.each do |category| %>
                    <%= link_to category.name,posts_path(category_id: category.id), class: 'nav-link dropdown-item' %>
                    <% end %>
                  </div>
                </div>
                <li><%= link_to '投稿一覧', posts_path, class: "btn btn-outline-dark mx-2 font-weight-bold" %></li>
                <div class="header-dropdown2">
                  <!-- 切替ボタンの設定 -->
                  <div class="nav-link" id="dropdownMenuButton button_group" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                     <i class="fa-regular fa-user fa-2x"></i>
                  </div>
                  <!-- ドロップメニューの設定 -->
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                      <%= link_to "新規登録", new_member_registration_path, class: 'nav-link dropdown-item' %>
                      <%= link_to "ログイン", new_member_session_path, class: 'nav-link dropdown-item' %>
                      <%= link_to 'ゲストログイン（閲覧用）', guest_path, method: :post, class: 'nav-link dropdown-item' %>
                  </div>
                </div>
            <% end %>
    </div>
</header>