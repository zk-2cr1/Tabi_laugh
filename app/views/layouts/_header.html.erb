<header class="bg-warning">
  <nav class="navbar">
    <div class="container-fluid">
        <%= link_to "旅ラフ", root_path, class: "btn btn-outline-dark mx-2" %>


         <div class="d-flex justify-content-end">
            <% if admin_signed_in? %>
                <%= render 'public/posts/category', categories: @categories %>
                <%= link_to "管理者トップ", admin_top_path, class: "btn btn-outline-dark mx-2" %>
                <%= link_to "ユーザー一覧", admin_members_path, class: "btn btn-outline-dark mx-2" %>
                <%= link_to "投稿一覧", admin_posts_path, class: "btn btn-outline-dark mx-2" %>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark mx-2" %>

            <% elsif member_signed_in? %>
                <p>ようこそ、<%= current_member.nick_name %>さん!</p>
                <%= render 'public/posts/search_form' %>
                <%= render 'public/posts/category', categories: @categories %>
                <%= link_to '投稿一覧', posts_path, class: "btn  btn-outline-dark btn-sm" %>

              <div class="link">
                <%= link_to new_post_path do %>
                   <i class="fa-regular fa-square-plus fa-2x"></i>
                <% end %>
              </div>

                <div class="header-dropdown">
                     <!--切替ボタンの設定 -->
                    <div class="nav-link" id="dropdownMenuButton button_group" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                     <i class="fa-regular fa-user fa-1x"></i>
                    </div>
                     <!--ドロップメニューの設定 -->
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                      <%= link_to 'マイページ', mypage_path, class: 'nav-link dropdown-item' %>
                      <%= link_to 'ログアウト', destroy_member_session_path, method: :delete, class: 'nav-link dropdown-item' %>
                      <%= link_to 'アカウント編集', edit_member_registration_path, class: 'nav-link dropdown-item' %>
                    </div>
                </div>

            <% else %>
                <%= render 'public/posts/search_form' %>
                <%= render 'public/posts/category', categories: @categories %>
                <%= link_to '投稿一覧', posts_path, class: "btn btn-outline-dark mx-2" %>

                <div class="header-dropdown">
                    <!-- 切替ボタンの設定 -->
                    <div class="nav-link" id="dropdownMenuButton button_group" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                     <i class="fa-regular fa-user fa-1x"></i>
                    </div>
                    <!-- ドロップメニューの設定 -->
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                      <%= link_to "新規登録", new_member_registration_path, class: 'nav-link dropdown-item' %>
                      <%= link_to "ログイン", new_member_session_path, class: 'nav-link dropdown-item' %>
                      <%= link_to 'ゲストログイン（閲覧用）', guest_path, method: :post, class: 'nav-link dropdown-item' %>
                    </div>
                </div>

            <% end %>
          </div>
    </div>
  </nav>
</header>