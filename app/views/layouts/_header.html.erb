<header class="bg-warning mb-3">
  <nav class="navbar">
    <div class="container-fluid">
      <div class="col-lg-4">
        <%= link_to "旅ラフ", root_path, class: "btn btn-outline-dark btn-lg text-left px-5" %>
      </div>

     <div class="col-lg-6 text-right">
        <%#= render 'public/posts/search_form' %>
        <%#= render 'public/posts/category', categories: @categories %>


        <% if admin_signed_in? %>
            <%= link_to "管理者トップ", admin_top_path, class: "btn btn-outline-dark mx-1" %>
            <%= link_to "ユーザー一覧", admin_members_path, class: "btn btn-outline-dark mx-1" %>
            <%= link_to "投稿一覧", admin_posts_path, class: "btn btn-outline-dark mx-1" %>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark mx-1" %>

        <% elsif member_signed_in? %>
         　　<%= render 'public/posts/search_form' %>
            <%= link_to "投稿一覧", posts_path, class: "btn btn-outline-dark" %>
            <div class="dropdown">
                 <!--切替ボタンの設定 -->
                <div class="nav-link" id="dropdownMenuButton button_group" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                 <i class="fa-regular fa-user fa-2x"></i>
                </div>
                 <!--ドロップメニューの設定 -->
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                  <%= link_to 'マイページ', mypage_path, class: 'nav-link dropdown-item' %>
                  <%= link_to 'ログアウト', destroy_member_session_path, method: :delete, class: 'nav-link dropdown-item' %>
                </div>
            </div>
        <% else %>
         <%= render 'public/posts/search_form' %>
            <%#= link_to "エリア一覧", categories_path, class: "btn btn-outline-dark mx-2" %>
            <%= link_to "投稿一覧", posts_path, class: "btn btn-outline-dark mx-1" %>
            <div class="dropdown">
                <!-- 切替ボタンの設定 -->
                <div class="nav-link" id="dropdownMenuButton button_group" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                 <i class="fa-regular fa-user fa-2x"></i>
                </div>
                <!-- ドロップメニューの設定 -->
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                  <%= link_to "新規登録", new_member_registration_path, class: 'nav-link dropdown-item' %>
                  <%= link_to "ログイン", new_member_session_path, class: 'nav-link dropdown-item' %>
                  <%= link_to 'ゲストログイン（閲覧用）', guest_path, method: :post, class: 'nav-link dropdown-item' %>
                </div>
            </div>
        <% end %>
      </div>

    </div>
  </nav>
</header>