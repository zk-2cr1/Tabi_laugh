<!--切替ボタンの設定 -->
<div class="nav-link" id="dropdownMenuButton button_group" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
  <div class="btn btn-outline-dark font-weight-bold">エリア</div>
</div>
<!--ドロップメニューの設定 -->
<div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
  <% if admin_signed_in? %>
    <% category.each do |category| %>
      <%= link_to category.name,admin_posts_path(category_id: category.id), class: 'nav-link dropdown-item' %>
    <% end %>
  <% else %>
    <% category.each do |category| %>
      <%= link_to category.name, posts_path(category_id: category.id), class: 'nav-link dropdown-item' %>
    <% end %>
  <% end %>
</div>