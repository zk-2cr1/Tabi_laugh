<div class = "container">
  <div class="bg"></br>
    <h3 class="font-weight-bold">アカウント情報編集</h3>
      <%= flash[:danger] %>
      <%= render 'layouts/errors', obj: @member %>

      <div class="account_edit">
      <div class="row justify-content-center">
        <div class='col-6'>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <li>名前</li>
          <p><%= f.text_field :name, :size=>"50", :placeholder =>"例：田中太郎" %></p>

          <li>表示名</li>
          <p><%= f.text_field :nick_name, :size=>"50", :placeholder =>"例：ニックネーム" %></p>

          <li>メールアドレス</li>
          <p><%= f.email_field :email, autocomplete: "email", :size=>"50", :placeholder =>"例：test@test.com" %></p>

          <li>パスワード</li>
          <p><%= f.password_field :password, autocomplete: "new-password", :size=>"50", :placeholder =>"例：6文字以上の半角英数字" %></p>

          <li>パスワード(確認用)</li>
          <p><%= f.password_field :password_confirmation, autocomplete: "new-password", :size=>"50", :placeholder =>"例：6文字以上の半角英数字" %></p>

          <div class="button-space">
            <div class="row justify-content-center">
              <%= f.submit "変更を保存",class: "btn btn-success btn-md" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      </div>


    <div class="row justify-content-start">
      <div class='col-md-4 offset-sm-9'>
        <h6 class="font-weight-bold">退会する方はこちら</h6>
          <div class='col-md-4 offset-sm-1'>
             <% if resource.email == 'guest@guest.com' %>
              <%= link_to '退会', member_registration_path(resource_name), data: {confirm: "本当によろしいですか？"}, method: :delete, class: "btn btn-danger px-3 btn-sm" %>
              <% else %>
              <%= link_to '退会', unsubscribe_path, data: {confirm: "本当によろしいですか？"}, class: "btn btn-danger px-3 btn-sm" %>
              <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
