<div class = "container">
  <div class="bg"></br>

    <div class="row justify-content-end">
      <div class="col-3">
      まだ会員ではない方 &emsp; <%= link_to "こちら", new_member_registration_path, class: "btn btn-outline-secondary btn-sm" %>
      </div>
    </div>

   <h3 class="font-weight-bold">会員ログイン</h3>
   <%= flash[:error] %>
   <%= render 'layouts/errors', obj: @member %>

    <div class="account_edit">
      <div class="row justify-content-center">
        <div class='col-6'>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <li>メールアドレス</li>
          <p><%= f.email_field :email, autocomplete: "email", :size=>"50", :placeholder =>"例：test@test.com" %></p>

          <li>パスワード</li>
          <p><%= f.password_field :password, autocomplete: "new-password", :size=>"50", :placeholder =>"例：6文字以上の半角英数字" %></p>

          <div class="button-space">
            <div class="row justify-content-center">
              <%= f.submit "ログイン",class: "btn btn-success btn-md" %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
