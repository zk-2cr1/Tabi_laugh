
<div class="row justify-content-md-center">
  <%= form_with model: @post, url: post_path, method: :patch, local: true do |f| %>

      <p>タイトル</p>
      <p><%= f.text_field :title, size: 100 %></p>

      <p>内容</p>
      <p><%= f.text_area :body, size: "100x20" %></p>

    <div class="row justify-content-md-center">
      <div><%= f.file_field :image, multiple: true %></div>
    </div>

<br>
    <div class="row justify-content-md-center">
      <div><%= f.submit '変更を保存', class: "btn btn-success btn-md" %></div>
    </div>

  <% end %>
</div>