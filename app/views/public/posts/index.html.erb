<div class="container">
  <div class="bg">
   <div class="row justify-content-center">
    <div class='col-6'>

    <% if params[:category_id] %>
       <div class="area">
         <%= image_tag @category.image %>
          <p class="name"><%= @category.name %></p>
          <p class="body"><%= @category.body %></p>
       </div>

       <br>
        <h3 class="section-ttl font-weight-bold"><%= @category.name %>の投稿一覧</h3>
        <h4 class="section-ttl">(全<%= @all_posts_count %>件)</h4>
　　<% else %>
　　　 <br>
			  <h3 class="section-ttl font-weight-bold">投稿一覧</h3>
			  <h4 class="section-ttl">(全<%= @all_posts_count %>件)</h4>
		  <% end %>

<!--投稿一覧-->
     <% if @posts.first %>
       <%= render 'public/posts/index', post: @posts %>
     <% else %>
 			   <h4>対応する投稿はありませんでした。</h4>
		  <% end %>

    </div>
   </div>
  </div>
</div>

